/* components/question/question.wxss */
.container {
  min-height: 1000rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  border: 2px rgb(245,245,245) solid;
  border-radius: 10rpx;
  font-size: 18px;
}
.header {
  padding: 10rpx;
  min-height: 30px;
}
.quesId::after{content: '. '}
.body {
  min-height: 400rpx;
  padding: 30rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}
.body text{
  display: block;
  padding: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 5rpx;
}
.body text:hover {
  background-color: rgb(245,245,245);
}
.body text:nth-child(1)::before{content: "A. "}
.body text:nth-child(2)::before{content: "B. "}
.body text:nth-child(3)::before{content: "C. "}
.body text:nth-child(4)::before{content: "D. "}
.footer .btn-group{
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 2px rgb(245,245,245) solid;
}
.footer button {
  font-weight: normal;
  color: black;
}
.default {
  background-color: rgb(245,245,245)
}
.active {
  background-color: lightblue !important
}
.success {
  background-color:rgb(223,240,216) !important
}
.failed {
  background-color: rgb(242,222,222) !important
}
.sheet {
  transform: scaleY(0);
  height: 0;
}
.answerSheet {
  display: flex;
  flex-wrap: wrap;
  text-align: center;
}
.answerSheet text {
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  border: 1px rgb(245,245,245) solid;
}